<form action="<%= action %>" method="post">
  <%= auth_token %>
  <input type="hidden" name="_method" value="<%= method %>">
  <label>
    Title
    <input type="text" name="link[title]" value="<%= link.title %>" />
  </label>
  <label>
    URL
    <input type="text" name="link[url]" value="<%= link.url %>" />
  </label>
  <button><%= button_text %></button>
</form>
